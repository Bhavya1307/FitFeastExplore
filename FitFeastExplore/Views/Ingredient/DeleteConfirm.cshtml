@model FitFeastExplore.Models.IngredientDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h2>Are you sure you want to delete this Ingredient?</h2>
        </div>
        <div class="card-body">
            <h6>Ingredient Id: @Model.IngredientId</h6>
            <form action="/Ingredient/Delete/@Model.IngredientId" method="POST">
                <div class="form-group">
                    <input type="submit" class="btn btn-danger" value="Confirm Delete" />
                    <a href="/Ingredient/List" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>