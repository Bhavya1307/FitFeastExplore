@model FitFeastExplore.Models.RecipeDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h2>Are you sure you want to delete this Recipe?</h2>
        </div>
        <div class="card-body">
            <h6>Recipe Id: @Model.RecipeId</h6>
            <p>Recipe Name: @Model.RecipeName</p>
            <form action="/Recipe/Delete/@Model.RecipeId" method="POST">
                <div class="form-group">
                    <input type="submit" class="btn btn-danger" value="Confirm Delete" />
                    <a href="/Recipe/List" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>