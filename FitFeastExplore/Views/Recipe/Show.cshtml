@model FitFeastExplore.Models.RecipeDto
@{
    ViewBag.Title = "Show";
}

<div class="container mt-5">
    <a href="/Recipe/ListByCategory?category=@Model.Category" class="btn btn-secondary my-3">Back to @Model.Category Recipes</a>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h2 class="card-title"><span class="fw-bold">Recipe Id: #@Model.RecipeId</span></h2>
                </div>
                <div class="card-body">
                    <p class="card-text"><span class="fw-bold">Recipe Name:</span> @Model.RecipeName</p>
                    <p class="card-text"><span class="fw-bold">Category:</span> @Model.Category</p>
                    <p class="card-text"><span class="fw-bold">Instructions:</span> @Model.Instructions</p>
                    <p class="card-text"><span class="fw-bold">Protein:</span> @Model.Protein</p>
                    <p class="card-text"><span class="fw-bold">Calories:</span> @Model.Calories</p>
                    <p class="card-text"><span class="fw-bold">Cooking Time:</span> @Model.CookingTime</p>
                    <p class="card-text"><span class="fw-bold">Ingredient:</span> @Model.IngredientName</p>

                    <div class="row">
                        <div class="col-md-6 d-flex justify-content-end">
                            <a href="/Recipe/DeleteConfirm/@Model.RecipeId" class="btn btn-danger me-2">Delete</a>
                        </div>
                        <div class="col-md-6 d-flex justify-content-start">
                            <a href="/Recipe/Edit/@Model.RecipeId" class="btn btn-primary">Update</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>